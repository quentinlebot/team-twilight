.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
                a.navbar-brand(href='#') Team Twilight
        .collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(href='/') Scores
                li
                    a(href='/map') Map builder
                li
                    a(href='/player') Players
                if user
                    li
                        a(href='/entity') Datas
            if user
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='#') #{user.login}
                    li
                        a(href='/signout') Deconnexion
            else
                form.navbar-form.navbar-right(id='submit' method='POST', action='/signin')
                    div#login.form-group
                        input.form-control(type="text" name='login' placeholder='login')
                    div#password.form-group
                        input.form-control(type="password" name='password' placeholder='password')
                    input.btn.btn-success(type='submit' value='Connexion')
script.
    $("#submit").submit(function( event ) {
        if(!login()) event.preventDefault();
    });

    function login() {
        var isValid = true;

        if($('#login input').val() == ''){
            isValid = false;
            $('#login').addClass('alert.alert-danger');
        }else $('#login').removeClass('alert.alert-danger');

        if($('#password input').val() == ''){
            isValid = false;
            $('#password').addClass('alert.alert-danger');
        }else $('#password').removeClass('alert.alert-danger');

        return isValid;
    };